# Backend environment variables for Office Transportation Management System
# Copy this file to .env and fill the values before running the server

NODE_ENV=development
PORT=5000

# MongoDB connection string (local or Atlas)
# Example local: mongodb://127.0.0.1:27017/office_transportation_db
# Example Atlas: mongodb+srv://<user>:<password>@cluster0.mongodb.net/office_transportation_db?retryWrites=true&w=majority
DATABASE_URL=

# bcrypt salt rounds
BCRYPT_SALT_ROUNDS=10

# JWT secrets (note: code expects JWT_SECRECT spelled this way)
JWT_SECRECT=your_jwt_secret_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_here
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d
